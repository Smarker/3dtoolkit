<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="microsoft.a3dtoolkitandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Connect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Stream"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_stream"
            android:parentActivityName=".ServerList"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="microsoft.a3dtoolkitandroid.ServerList" />
        </activity>
        <activity
            android:name=".ServerList"
            android:label="@string/title_activity_serverList"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Connect" />
        </activity>
    </application>

</manifest>